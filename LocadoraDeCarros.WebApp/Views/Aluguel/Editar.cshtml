@model LocadoraDeCarros.WebApp.Models.EditarAluguelViewModel

@{
    ViewBag.Title = "Editar Aluguel";
}

<h1 class="fs-5 mb-3">Editar Aluguel</h1>

<div class="container">
    <div class="row">
        <div class="col-6">
            <form class="d-grid" asp-action="Editar">
                <label class="control-label fw-semibold mb-1">Condutor</label>
                <select class="form-select" asp-for="CondutorId" asp-items="Model.Condutores">
                    <option disabled>Selecione um condutor</option>
                </select>
                <span class="text-danger fs-6" asp-validation-for="CondutorId"></span>

                <label class="control-label fw-semibold mb-1">Automovel</label>
                <select class="form-select" asp-for="AutomovelId" asp-items="Model.Automoveis">
                    <option disabled>Selecione um automovel</option>
                </select>
                <span class="text-danger fs-6" asp-validation-for="AutomovelId"></span>

                <label class="control-label fw-semibold mb-1">Plano</label>
                <select class="form-select" asp-for="PlanoId" asp-items="Model.Planos">
                    <option disabled>Selecione um plano</option>
                </select>
                <span class="text-danger fs-6" asp-validation-for="PlanoId"></span>
         
                <label class="control-label fw-semibold">Data de Saida</label>
                <input class="form-control" value="@DateTime.Now" type="date" asp-for="DataSaida"/>
                <span class="text-danger fs-6" asp-validation-for="DataSaida"></span>
         
                <label class="control-label fw-semibold">Data de Retorno</label>
                <input class="form-control" value="@DateTime.Now" type="date" asp-for="DataRetorno"/>
                <span class="text-danger fs-6" asp-validation-for="DataRetorno"></span>
                
                <label class="control-label fw-semibold mb-1">Taxas</label>
                <select class="form-select" asp-for="TaxaId" asp-items="Model.Taxas">
                    <option disabled>Selecione as taxas</option>
                </select>
                <span class="text-danger fs-6" asp-validation-for="PlanoId"></span>
                
                <button class="btn btn-dark col-3 mt-2">Inserir</button>
            </form>
        </div>
    </div>
</div>