@model EditarClienteViewModel

@{
    ViewBag.Title = "Editar Cliente";
}

<h1 class="fs-5 mb-3">Editar Cliente</h1>

<div class="container">
    <div class="row">
        <div class="col-6">
            <form class="d-grid" asp-action="Editar">
                <label class="control-label fw-semibold">Nome:</label>
                <input class="form-control" asp-for="Nome"/>
                <span class="text-danger fs-6" asp-validation-for="Nome"></span>

                <label class="control-label fw-semibold">E-Mail:</label>
                <input class="form-control" asp-for="Email"/>
                <span class="text-danger fs-6" asp-validation-for="Email"></span>

                <label class="control-label fw-semibold">Telefone:</label>
                <input class="form-control" asp-for="Telefone"/>
                <span class="text-danger fs-6" asp-validation-for="Telefone"></span>

                <label class="control-label fw-semibold">Estado:</label>
                <select class="form-select" asp-for="Estado">
                    <option>Selecione seu Estado</option>
                    <option>AC</option>
                    <option>AL</option>
                    <option>AP</option>
                    <option>AM</option>
                    <option>BA</option>
                    <option>CE</option>
                    <option>DF</option>
                    <option>ES</option>
                    <option>GO</option>
                    <option>MA</option>
                    <option>MT</option>
                    <option>MS</option>
                    <option>MG</option>
                    <option>PA</option>
                    <option>PB</option>
                    <option>PR</option>
                    <option>PE</option>
                    <option>PI</option>
                    <option>RJ</option>
                    <option>RN</option>
                    <option>RS</option>
                    <option>RO</option>
                    <option>RR</option>
                    <option>SC</option>
                    <option>SP</option>
                    <option>SE</option>
                    <option>TO</option>
                </select>
                <span class="text-danger fs-6" asp-validation-for="Estado"></span>
                
                <label class="control-label fw-semibold">Cidade:</label>
                <input class="form-control" asp-for="Cidade"/>
                <span class="text-danger fs-6" asp-validation-for="Cidade"></span>

                <label class="control-label fw-semibold">Bairro:</label>
                <input class="form-control" asp-for="Bairro"/>
                <span class="text-danger fs-6" asp-validation-for="Bairro"></span>

                <label class="control-label fw-semibold">Rua:</label>
                <input class="form-control" asp-for="Rua"/>
                <span class="text-danger fs-6" asp-validation-for="Rua"></span>

                <label class="control-label fw-semibold">Numero:</label>
                <input type="number" class="form-control" asp-for="Numero"/>
                <span class="text-danger fs-6" asp-validation-for="Numero"></span>

                <label class="control-label fw-semibold">Tipo de Cliente:</label>
                <select class="form-select" asp-for="TipoCliente">
                    <option>Selecione o tipo de pessoa</option>
                    <option>Pessoa Fisica</option>
                    <option>Pessoa Juridica</option>
                </select>
                <span class="text-danger fs-6" asp-validation-for="TipoCliente"></span>
                
                <button class="btn btn-dark col-3 mt-2">Inserir</button>
            </form>
        </div>
    </div>
</div>
