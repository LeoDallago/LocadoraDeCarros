@model DetalhesGrupoAutomoveisViewModel

@{
    ViewBag.Title = "Excluir Grupo de Veiculos";
}

<h2 class="fs-4 mb-3">Excluir Grupo de Veiculos</h2>

<form class="d-block" asp-action="Excluir">
    <h3 class="fs-semibold fs-5">Deseja Excluir o grupo <strong>@Model.Grupo</strong> ?</h3>
